<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    tools:context=".AdSquads.AdSquadActivity">

    <TextView
        android:id="@+id/ad_squad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ad_squad_name">

    <EditText
        android:id="@+id/AdName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity = "center_horizontal"
        android:hint="Enter Snap Ad Name"
        android:layout_marginTop="1000dp"
        android:textColorHint="#0000ff"
        android:layout_centerInParent="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/post_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="Create Ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>